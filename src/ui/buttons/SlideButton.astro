---
import { Image } from "astro:assets";

const { className, text, icon } = Astro.props;
---

<button class={`slide-btn ${className}`}>
   <div class="slider">
      <span>{text}</span>
      <Image src={icon} alt="Arrow Icon" width={24} height={24} />
   </div>
</button>

<style>
   .slide-btn {
      height: 54px;
      border: 0;
      border-radius: 50px;
      padding-inline: 30px;

      cursor: pointer;
      overflow: hidden;

      text-decoration: none;
      font-size: 1rem;
      font-weight: 500;
      color: white;

      transition: all 0.3s ease;
   }

   .slide-btn:hover .slider {
      transform: translateY(-43%);
   }

   .slider {
      transform: translateY(25%);

      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 27px;

      transition: 300ms;
   }

   .primary {
      background: var(--primary-gradient);
      box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
   }

   .primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 30px rgba(102, 126, 234, 0.4);
   }
</style>
